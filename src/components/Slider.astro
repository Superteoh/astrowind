</Layout>
  
  <script>
    import Swiper from 'swiper';
    import 'swiper/css';
    import { Navigation } from "swiper/modules";
    import "swiper/css/navigation";
     
    export default {
      async mounted() {
        const swiper = new Swiper(".swiper-container", {
          modules: [Navigation], 
          slidesPerView: 'auto', 
          centeredSlides: true,  
          spaceBetween: 40,      
          navigation: {          
            prevEl: ".swiper-button-prev",
            nextEl: ".swiper-button-next",
          }
        });
        
      }
    }
  </script>
  
  <style>
    .swiper-container {
      width: 80%; 
      max-width: 800px; 
      height: 300px; 
      margin: 0 auto; 
      border: 1px solid #ccc; 
      border-radius: 10px; 
      overflow: hidden; 
    }
  
    .swiper-slide {
      position: relative; 
      display: flex; 
      justify-content: center; 
      align-items: center; 
      width: 100%; 
    }
  
    .swiper-slide img {
      max-width: 100%; 
      height: auto; 
    }
  
    .swiper-slide b {
      position: absolute; 
      bottom: 20px; 
      left: 20px; 
      color: white; 
      font-weight: bold; 
      text-shadow: 2px 2px 2px rgba(0, 0, 0, 0.5); 
      z-index: 1; 
    }
  
    /* Estilos restantes */
  </style>
  